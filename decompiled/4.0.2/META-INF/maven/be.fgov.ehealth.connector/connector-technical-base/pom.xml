<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>be.fgov.ehealth.connector</groupId>
        <artifactId>connector-technical-master</artifactId>
        <version>4.0.2</version>
    </parent>

    <artifactId>connector-technical-base</artifactId>
    <name>${project.artifactId}</name>
    <description>Connector Technical base (${project.artifactId})</description>

    <packaging>jar</packaging>

    <properties>
        <mockserver-netty.version>3.10.7</mockserver-netty.version>

        <internetexplorer-driver.windows.name>ie.driver.windows</internetexplorer-driver.windows.name>
        <internetexplorer-driver.version>3.12.0</internetexplorer-driver.version>

        <chrome-driver.windows.name>chrome.driver.windows</chrome-driver.windows.name>
        <chrome-driver.linux.name>chrome.driver.linux</chrome-driver.linux.name>
        <chrome-driver.version>92.0.4515.107</chrome-driver.version>

        <gecko-driver.windows.name>firefox.driver.windows</gecko-driver.windows.name>
        <gecko-driver.linux.name>firefox.driver.linux</gecko-driver.linux.name>
        <gecko-driver.version>0.28.0</gecko-driver.version>

    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack technical core 'resources'</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>connector-helpers-testresources</artifactId>
                                    <version>${version.helpers}</version>
                                </artifactItem>
                            </artifactItems>
                            <excludes>**/META-INF/**,**/*.etk</excludes>
                            <outputDirectory>target/generated-test-resources</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <!-- USAGE: mvn webdriverextensions:install-drivers -->
                <groupId>com.github.webdriverextensions</groupId>
                <artifactId>webdriverextensions-maven-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>install-drivers</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <keepDownloadedWebdrivers>false</keepDownloadedWebdrivers>
                    <installationDirectory>target/webdrivers</installationDirectory>
                    <repositoryUrl>
                        https://repo.gcloud.belgium.be/artifactory/public-generic-github-remote/webdriverextensions/webdriverextensions-maven-plugin-repository/raw/master/repository-3.0.json
                    </repositoryUrl>
                    <drivers>
                        <driver>
                            <name>geckodriver</name>
                            <platform>windows</platform>
                            <bit>64</bit>
                            <version>${gecko-driver.version}</version>
                            <customFileName>${gecko-driver.windows.name}</customFileName>
                            <url>
                                https://repo.gcloud.belgium.be/artifactory/common-generic-geckodriver-remote/v${gecko-driver.version}/geckodriver-v${gecko-driver.version}-win64.zip
                            </url>
                        </driver>
                        <driver>
                            <name>geckodriver</name>
                            <platform>linux</platform>
                            <bit>64</bit>
                            <version>${gecko-driver.version}</version>
                            <customFileName>${gecko-driver.linux.name}</customFileName>
                            <url>
                                https://repo.gcloud.belgium.be/artifactory/common-generic-geckodriver-remote/v${gecko-driver.version}/geckodriver-v${gecko-driver.version}-linux64.tar.gz
                            </url>
                        </driver>
                        <driver>
                            <name>chromedriver</name>
                            <platform>windows</platform>
                            <bit>32</bit>
                            <version>${chrome-driver.version}</version>
                            <customFileName>${chrome-driver.windows.name}</customFileName>
                            <url>
                                https://repo.gcloud.belgium.be/artifactory/common-generic-chromedriver-remote/${chrome-driver.version}/chromedriver_win32.zip
                            </url>
                        </driver>
                        <driver>
                            <name>chromedriver</name>
                            <platform>linux</platform>
                            <bit>64</bit>
                            <version>${chrome-driver.version}</version>
                            <customFileName>${chrome-driver.linux.name}</customFileName>
                            <url>
                                https://repo.gcloud.belgium.be/artifactory/common-generic-chromedriver-remote/${chrome-driver.version}/chromedriver_linux64.zip
                            </url>
                        </driver>
                    </drivers>
                </configuration>
            </plugin>

        </plugins>
    </build>


