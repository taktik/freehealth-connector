    <profiles>
        <profile>
            <id>webdriver-windows</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <properties>
                <chromedriver.platform>windows</chromedriver.platform>
                <chromedriver.format>32</chromedriver.format>
            </properties>
        </profile>
        <profile>
            <id>webdriver-linux</id>
            <activation>
                <os>
                    <family>Linux</family>
                </os>
            </activation>
            <properties>
                <chromedriver.platform>linux</chromedriver.platform>
                <chromedriver.format>64</chromedriver.format>
            </properties>
        </profile>
    </profiles>

</project>
